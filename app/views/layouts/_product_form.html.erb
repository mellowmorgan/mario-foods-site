<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |f| %>
  <div class="field">
  <%= f.label :name %><br>
  </div>
  <%= f.text_field :name %>
  <div class="field">
  <%= f.label :cost %><br>
  <%= f.number_field :cost, step: 0.01 %>
  </div>
  <div class="field">
  <%= f.label :country_of_origin %><br>
  <%= f.text_field :country_of_origin %>
  <div class="field">
  <%= f.submit %>
  </div>
<% end %>
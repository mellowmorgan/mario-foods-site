<!DOCTYPE html>
<html>
  <head>
    <title>MarioFoodsSite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <div class="my-nav">
      <%= link_to "Home", root_path %> | 
      <% if user_signed_in? %>
        <%= link_to "Edit Account", edit_user_registration_path %> | <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
      <% else %>
        <%= link_to "Sign-In/Sign-Up", new_user_session_path %>
      <% end %>
      <div class="search">
        <%= form_tag searches_path, method: :get, class: 'form-inline' do %>
        <%= text_field_tag 'search', nil, placeholder: "Search" %>
        <%= submit_tag 'Search', name: nil %>
        <% end %>
      </div>
      </div>
    <%= yield %>

  </body>
</html>

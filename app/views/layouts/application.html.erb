<!DOCTYPE html>
<html>
  <head>
    <title>Mario Foods Specialty Store</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('fav.png') %>

  </head>

  <body>
    <div class="my-nav">
      <%= link_to "Home", root_path %> | 
      <% if user_signed_in? %>
        <%= link_to "Edit Account", edit_user_registration_path %> | <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
      <% else %>
        <%= link_to "Sign-In/Sign-Up", new_user_session_path %>
      <% end %>
        <%= form_tag searches_path, class:"form-nav", method: :get do %>
        <%= text_field_tag 'search', nil, placeholder: "Search" %>
        <%= submit_tag 'Search', name: nil %>
        <% end %>
      </div>
    <%= yield %>

  </body>
</html>

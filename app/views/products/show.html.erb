<div class="image-product">
</div>
<div class="container">
<div class="notice">
<%= flash[:alert] %>
<%= flash[:notice] %>
</div>
<%= render "layouts/errors", :object => @product %>
<h2><%= @product.name %></h2>
<h3>Cost: $<%= @product.cost %></h3>
<h3>Country of origin: <%= @product.country_of_origin %></h3>
<p><%= link_to "Edit", edit_product_path(@product) %></p>

<p><%= link_to "Delete product", product_path(@product),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>

<p><%= link_to "Return to products", products_path %></p>

<br>
<h2>Reviews</h2>
<% if @product.reviews.any? %>
  <% @product.reviews.each do |review| %> 
    <%= link_to "Review by " + review.author, product_review_path(@product, review) %>
    <ul>
      <li>Rating: <%= review.rating %></li>
      <li>Review: <q><%= review.content_body%></q></li>
    </ul>
  <% end %>
<% else %>
  <p>No reviews yet.</p>
<% end %>

<p><b><%= link_to "Add a review", new_product_review_path(@product) %></b></p>


</div>